// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multischema"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["user", "flights", "hotels", "balance"]
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  createAt  DateTime @default(now())
  updateAt  DateTime @updatedAt
  role      Role
  balanceId Int      @unique
  balance   Balance  @relation(fields: [balanceId], references: [id])

  @@schema("user")
}

enum Role {
  ADMIN
  PENGGUNA
  MITRA

  @@schema("user")
}

model Airpots {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  flights     Flight[]

  @@schema("flights")
}

model Flight {
  id             Int      @id @default(autoincrement())
  destination    String
  deparatur_time DateTime
  arrival_time   DateTime
  price          Decimal
  flight_type    String
  airport        Airpots  @relation(fields: [airportId], references: [id])
  airportId      Int

  @@schema("flights")
}

model Hotel {
  id          Int    @id @default(autoincrement())
  name        String
  description String
  rooms       Room[]

  @@schema("hotels")
}

model Room {
  id              Int    @id @default(autoincrement())
  hotel           Hotel  @relation(fields: [hotelId], references: [id])
  room_number     Int
  price_per_night Int
  room_type       String
  hotelId         Int

  @@schema("hotels")
}

model Balance {
  id     Int     @id @default(autoincrement())
  user   User?
  amount Decimal

  @@schema("balance")
}
